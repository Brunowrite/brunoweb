<h1 class="text-center text-white mb-4">Criar Nova Publicação</h1>

<%= form_with model: @article, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, "Título" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body, "Conteúdo" %>
    <%= form.text_area :body, class: 'form-control content-textarea', rows: 5 %> <!-- Aqui você está aplicando a classe 'content-textarea' -->
  </div>

  <%= form.submit "Publicar", class: "btn btn-primary" %>
<% end %>


<div class="text-center mt-3">
  <%= link_to "Voltar para a lista de publicações", articles_path, class: "btn btn-secondary btn-lg" %>
</div>
