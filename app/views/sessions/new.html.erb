<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
  <div class="card p-4 shadow-lg" style="width: 400px; background-color: #F0F4FF;">
    <h2 class="text-center mb-4" style="color: #1B1F3B;">Login</h2>
    <%= form_with url: login_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email, "Email", style: 'color: #1B1F3B;' %>
        <%= form.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :password, "Senha", style: 'color: #1B1F3B;' %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>
      <%= form.submit "Entrar", class: "btn btn-primary btn-block" %>
    <% end %>
    <p class="text-center mt-3">
      NÃ£o tem uma conta? <%= link_to 'Cadastre-se', new_user_path %>
    </p>
  </div>
</div>
